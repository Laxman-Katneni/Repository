<main class = "media-main">
    <section class="media-press">
            <h2>Media Presence</h2>
            <!-- A list of media Presences in a grid -->
            <div class="media-grid">
                <ul class="media-list">
                    <li class="media-header">
                        <span class="media-source-header">Source</span>
                        <span class="media-title-header">Title/Description</span>
                        <span class="media-date-header">Date</span>
                    </li>
                    <!-- Each item represents a media presence -->
                    <% data.mediaPresence.each do |media| %>
                            <li class="media-row">
                                <span class="media-source"><%= media.source %></span>
                                <span class="media-title"><%= media.title %></span>
                                <span class="media-date"><%= media.date %></span>
                            </li>
                    <% end %>
                </ul>
            </div>


